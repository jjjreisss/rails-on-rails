
<form action=" <%= action %>" method="post">
  <%= authenticity_token %>
  <input type="hidden" name="_method" value="<%= method %>">

  <table>
    <tr>
      <td>
        <label for="subs_title">Title </label>
      </td>
      <td>
        <input type="text" name="sub[title]" value="<%= @sub.title %>">
      </td>
    </tr>
    <tr>
      <td>
        <label for="description">Description </label>
      </td>
      <td>
        <textarea name="sub[description]" rows="8" cols="40"><%= @sub.description %></textarea>
      </td>
    </tr>
  </table>
    <input type="hidden" name="sub[author_id]" value=" <%= current_user.id %>">
    <input type="submit" value="Make Sub!">
</form>
