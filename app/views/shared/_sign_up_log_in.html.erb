<form action=" <%= action %>" method="post">
  <%=  authenticity_token %>
  <table>
    <tr>
      <td>
        Username
      </td>
      <td>
        <input type="text" name="user[username]">
      </td>
    </tr>
    <tr>
      <td>
        Password
      </td>
      <td>
        <input type="password" name="user[password]">
      </td>
    </tr>
<% if action==users_url %>
      <tr>
        <td>
          Email
        </td>
        <td>
          <input type="text" name="user[email]">
        </td>
      </tr>
  </table>
  <input type="submit" value="Sign up!">
</form>
<% else %>
  </table>
  <input type="submit" value="Log In!">
</form>
<% end %>
